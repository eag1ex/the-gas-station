{
  "name": "the-gas-station",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "start": "npm run prod",
    "prod": "node dist/main",
    "dev": "cross-env NODE_ENV=development nest start",
    "dev:w": "nest start --watch",
    "start:local:prod": "cross-env NODE_ENV=production node dist/main.js",
    "build": "rimraf dist && nest build",
    "postinstall": "npx prisma db push && npx prisma generate",
    "heroku-postbuild": "npm run build && npm run seed",
    "generate:db": "npx prisma db push",
    "generate:client": "npx prisma generate",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "seed": "npx prisma db seed",
    "purge:db": "rm prisma/prod.db && npx prisma db push"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.11.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "moment": "^2.30.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.6.2",
    "prisma": "^6.11.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
